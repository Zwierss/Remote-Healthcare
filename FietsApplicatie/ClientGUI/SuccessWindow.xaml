<UserControl x:Class="ClientGUI.SuccessWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientGUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <TextBlock HorizontalAlignment="Center" Margin="0,126,0,0" TextWrapping="Wrap" Text="Gelukt! De fiets is klaar voor gebuik" VerticalAlignment="Top" FontSize="16"/>
        <Image Source="resources/checkmark.png" HorizontalAlignment="Left" Height="100" Margin="341,180,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="Stop simulatie en log uit" HorizontalAlignment="Center" Margin="0,322,0,0" VerticalAlignment="Top" Height="27" Width="144" Command="{Binding Stop}"/>
    </Grid>
</UserControl>
